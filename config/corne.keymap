#include <behaviors.dtsi>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/bt.h>

/ {
    combos {
        compatible = "zmk,combos";

        new_combo {
            bindings = <&trans>;
            key-positions = <0>;
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            bindings = <
   &kp ESC   &kp Q   &kp W      &kp E   &kp R       &kp T      &kp Y   &kp U         &kp I    &kp O     &kp P   &kp BSPC
   &kp TAB   &kp A   &kp S      &kp D   &kp F       &kp G      &kp H   &kp J         &kp K    &kp L  &kp SEMI    &kp SQT
 &kp LSHFT   &kp Z   &kp X      &kp C   &kp V       &kp B      &kp N   &kp M     &kp COMMA  &kp DOT  &kp FSLH  &kp ENTER
                            &kp LCTRL   &mo 1  &kp ESCAPE  &kp SPACE   &mo 2  &kp LEFT_ALT
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
 &kp ESCAPE           &kp N1  &kp N2     &kp N3  &kp N4   &kp N5          &kp N6          &kp N7        &kp N8     &kp N9    &kp N0   &kp BSPC
    &kp TAB           &trans  &trans     &trans  &trans   &trans  &kp LEFT_ARROW  &kp DOWN_ARROW  &kp UP_ARROW  &kp RIGHT  &kp PLUS  &kp MINUS
  &kp LSHFT  &kp PRINTSCREEN  &trans     &trans  &trans   &trans       &kp MINUS    &kp NUMBER_0        &trans     &trans    &trans  &kp ENTER
                                      &kp LCTRL  &trans  &kp ESC       &kp SPACE          &trans  &kp LEFT_WIN
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            bindings = <
 &kp TILDE    &kp EXCL      &kp AT        &kp HASH              &kp DLLR         &kp PRCNT          &kp CARET               &kp AMPS  &kp KP_MULTIPLY  &kp TILDE      &kp MINUS   &kp BSPC
 &kp GRAVE      &trans      &trans  &kp LEFT_BRACE  &kp LEFT_PARENTHESIS  &kp LEFT_BRACKET  &kp RIGHT_BRACKET  &kp RIGHT_PARENTHESIS  &kp RIGHT_BRACE     &trans       &kp PLUS   &kp PIPE
 &kp LSHFT  &bt BT_CLR  &bt BT_NXT      &bt BT_PRV     &kp C_VOLUME_DOWN   &kp C_VOLUME_UP             &trans              &kp EQUAL   &kp UNDERSCORE     &trans  &kp BACKSLASH  &kp ENTER
                                         &kp LCTRL                &trans        &kp ESCAPE          &kp SPACE                 &trans     &kp LEFT_WIN
            >;
        };
    };
};
